doctype 5
html
	head
		meta(charset='utf-8')
		title= title
		meta(name="description", content="A simple website for interacting with speakers during their talks")
		meta(name="keywords", content="faceplant, speaking, social")
		meta(name="author", content="Brandon Satrom")
		meta(name="viewport", content="width=device-width; initial-scale=1.0")
		link(rel='stylesheet', href='/stylesheets/kendo.common.min.css')
		link(rel='stylesheet', href='/stylesheets/kendo.metro.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		div#teaser
		div#site-wrapper
			header
				div#top
					hgroup(class="left")
						h1
							a(href="/") 
								img(src="/images/QuoteFaces.png", id="siteLogo", alt="Logo")
            
				nav(id="main", class="left")
					ul(class="tabbed")
						li
							a(href="/") Home
						li
							a(href="/sessions") Sessions
						li(class="current-tab") 
							a(href="/speakers") Speakers
						li
							a(href="/tags") Topics
						li
							a(href="/account") Sign Up!
					div(class="clearer")
						&nbsp;
				div(class="clearer")
					&nbsp;
			div#notice
			block content
			footer
				div#footer-left(class="left")
					img(src="/images/logo-small.png", alt="Small Logo", class="left")
					p
						&copy; 2009-2011 Carrot Pants Studios. All rights Reserved
					p(class="quiet")
						a(href="http://templates.arcsin.se/" ) Website template
						|  by
						a(href="http://arcsin.se/")  Arcsin
					div(class="clearer") &nbsp;
				div#footer-right(class="right", id="footer-right")
					p(class="large")
						a(href="/") Home
						span(class="text-separator") |
						a(href="/sessions") Sessions 
						span(class="text-separator") |
						a(href="/speakers") Speakers
						span(class="text-separator") |
						a(href="/tags") Topics
						span(class="text-separator") |
						a(href="/account") Sign Up! 
						span(class="text-separator") |
						a(href="#top", class="quiet" ) Page Top &uarr;
				div(class="clearer")
					&nbsp;
			script(src="/javascripts/jquery.min.js")
			script(src="/javascripts/kendo.all.min.js")
			block scripts